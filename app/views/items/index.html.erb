<h1>Items</h1>
<%= link_to 'New item', new_item_path, class: 'btn btn-default'  %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Description</th>
      <th>Days Left</th>
      <th>Completed</th>
    </tr>
  </thead>
  <tbody>
      <% @items.each do |item| %> 
        <tr>
          <td><%= item.description %></td>
          <td><%= rand(2..5) %></td>
          <td><%= item.complete? %></td>
        </tr>
      <% end %>
     
   </tbody>
</table>

