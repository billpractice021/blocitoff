<h1>Items</h1>
<%= link_to 'New item', new_item_path, class: 'btn btn-default'  %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Description</th>
      <th>Days Left</th>
      <th>Mark Complete</th>
      <th>Edit Item</th>
    </tr>
  </thead>
  <tbody>
      <% @items.each do |item| %> 
        <tr>
          <td><%= item.description %></td>
          <td><%= item.number_days_left %></td>
          <td><%= link_to "", item, method: :delete, class: 'glyphicon glyphicon-ok' %></td>
          <td><%= link_to "Edit", edit_item_path(item) %></td>
        </tr>
      <% end %>
     
   </tbody>
</table>

